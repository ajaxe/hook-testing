@page "{id?}"
@model IndexModel
@{
    ViewData["Title"] = "Webhook Tester";
}
<div class="p-5 m-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Webhook Tester</h1>
        <p class="fs-4">
            Simple webhook testing tool that enables a developer to try out webhook event callbacks without writing any
            code.
        </p>
        <a class="btn btn-primary btn-lg" type="button" asp-page="/session/index">Start new session</a>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var m in Model.Perks)
    {
        <div class="col">
            <div class="card bg-light shadow bg-body-tertiary border-bottom-0 border-end-0">
                <div class="card-body">
                    <h5 class="card-title"><span class="text-primary"><i class="bi bi-check-circle-fill"></i></span>
                        @m.Title
                    </h5>
                    <p class="card-text text-muted fs-5">
                        @m.Description
                    </p>
                </div>
            </div>
        </div>
    }
</div>
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebhookTester</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
        integrity="sha256-8M+b2Hj+vy/2J5tZ9pYDHeuPD59KsaEZn1XXj3xVhjg=" crossorigin="anonymous">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/WebhookTester.styles.css")" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand mb-0 h1 text-dark" href="#">Webhook Tester</a>

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex" role="auth">
                        <div id="g_id_onload" data-client_id="@Configuration["AppOptions:GoogleClientId"]"
                        data-auto_select="false" data-login_uri="@Url.PageLink(pageName: "LoginHandler", pageHandler: "GoogleSignIn",
                        values: new { currentPage = Accessor.HttpContext.Request.Path })">
                        </div>
                        <div class="g_id_signin" data-type="standard" data-size="medium" data-theme="outline"
                        data-text="signin" data-shape="rectangular" data-logo_alignment="left">
                        </div>
                    </div>
                }
                else
                {
                    @await Component.InvokeAsync("UserProfile")
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebhookTester - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/cash-dom@8.1.1/dist/cash.min.js"
        integrity="sha256-IePJAeD7O2sVuDQhnSmW06vOpqIacmQX6EgP8nkKYwc=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/htmx.org@1.8.4"
        integrity="sha384-wg5Y/JwF7VxGk4zLsJEcAojRtlVp1FKKdGy1qN+OMtdq72WRvX/EdRdqg/LOhYeV"
        crossorigin="anonymous"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>